@page
@model New_Harbinger.Pages.Characters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Character</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Species)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Species)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Character.Affiliation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Character.Affiliation)
        </dd>
    </dl>
</div>
    <h4>Quests</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quest in Model.Quests)
            {
                <tr>
                    <td>@quest.Title</td>
                    <td>@quest.Description</td>
                    <td>@quest.Type</td>
                </tr>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
            }
        </tbody>
    </table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Character.CharacterId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
